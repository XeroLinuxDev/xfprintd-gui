<?xml version="1.0" encoding="UTF-8" ?>
<interface>
  <!-- Resource path prefix: /xyz/xerolinux/fp_gui -->
  <requires lib="gtk" version="4.0" />

  <!-- Main application window -->
  <object class="GtkApplicationWindow" id="app_window">
    <property name="title">Fingerprint GUI</property>
    <property name="default-width">560</property>
    <property name="default-height">420</property>

    <child>
      <!-- Central stack with two views: "main" and "enroll" -->
      <object class="GtkStack" id="stack">
        <property name="transition-type">crossfade</property>

        <!-- Main page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="title">Main</property>
            <property name="icon-name">go-home-symbolic</property>
            <property name="child">
              <object class="GtkBox" id="page_main">
                <property name="orientation">vertical</property>
                <property name="spacing">15</property>
                <property name="margin-top">20</property>
                <property name="margin-bottom">20</property>
                <property name="margin-start">30</property>
                <property name="margin-end">30</property>

                <!-- Title -->
                <child>
                  <object class="GtkLabel" id="main_title">
                    <property name="label">Fingerprint Authentication</property>
                    <property name="halign">center</property>
                    <style>
                      <class name="title-1" />
                    </style>
                  </object>
                </child>

                <!-- Icon -->
                <child>
                  <object class="GtkImage" id="main_icon">
                    <property
                                            name="icon-name"
                                        >dialog-password-symbolic</property>
                    <property name="pixel-size">48</property>
                    <property name="halign">center</property>
                  </object>
                </child>

                <!-- Description -->
                <child>
                  <object class="GtkLabel" id="main_desc">
                    <property
                                            name="label"
                                        >Manage fingerprint authentication on your system, including enrollment and enabling fingerprint login, terminal use, and system prompts.</property>
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <property name="halign">center</property>
                    <property name="margin-bottom">10</property>
                  </object>
                </child>

                <!-- Enroll button -->
                <child>
                  <object class="GtkButton" id="enroll_btn">
                    <property name="label">Enroll Fingerprint</property>
                    <property name="halign">center</property>
                    <property name="width-request">180</property>
                    <property name="height-request">36</property>
                    <style>
                      <class name="suggested-action" />
                    </style>
                  </object>
                </child>

                <!-- Switches section -->
                <child>
                  <object class="GtkBox" id="switches_box">
                    <property name="orientation">vertical</property>
                    <property name="spacing">10</property>
                    <property name="margin-top">20</property>
                    <property name="halign">center</property>

                    <!-- Login row -->
                    <child>
                      <object class="GtkBox" id="row_login">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">15</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkLabel" id="lbl_login">
                            <property
                                                            name="label"
                                                        >Enable Authentication On Login</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSwitch" id="sw_login">
                            <property name="halign">end</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Terminal row -->
                    <child>
                      <object class="GtkBox" id="row_term">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">15</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkLabel" id="lbl_term">
                            <property
                                                            name="label"
                                                        >Enable Authentication in Terminal</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSwitch" id="sw_term">
                            <property name="halign">end</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- System prompt row -->
                    <child>
                      <object class="GtkBox" id="row_prompt">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">15</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkLabel" id="lbl_prompt">
                            <property
                                                            name="label"
                                                        >Enable Authentication in System Prompt</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSwitch" id="sw_prompt">
                            <property name="halign">end</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Enroll page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">enroll</property>
            <property name="title">Enroll</property>
            <property name="icon-name">system-search-symbolic</property>
            <property name="child">
              <object class="GtkBox" id="page_enroll">
                <property name="orientation">vertical</property>
                <property name="spacing">15</property>
                <property name="margin-top">20</property>
                <property name="margin-bottom">20</property>
                <property name="margin-start">30</property>
                <property name="margin-end">30</property>

                <!-- Back button -->
                <child>
                  <object class="GtkButton" id="back_btn">
                    <property name="label">‚Üê Back</property>
                    <property name="halign">start</property>
                  </object>
                </child>

                <!-- Title -->
                <child>
                  <object class="GtkLabel" id="enroll_title">
                    <property name="label">Select a finger to enroll:</property>
                    <property name="halign">center</property>
                    <property name="margin-top">10</property>
                  </object>
                </child>

                <!-- Description -->
                <child>
                  <object class="GtkLabel" id="enroll_desc">
                    <property
                                            name="label"
                                        >Click (tap) on a finger below to begin enrolling that fingerprint. Once enrolled, you will be able to use it for login or system prompts.</property>
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <property name="halign">center</property>
                    <property name="margin-bottom">12</property>
                  </object>
                </child>

                <!-- Flow box to dynamically populate finger buttons in code -->
                <child>
                  <object class="GtkFlowBox" id="fingers_flow">
                    <property name="selection-mode">none</property>
                    <property name="halign">center</property>
                    <property name="max-children-per-line">5</property>
                    <property name="row-spacing">20</property>
                    <property name="column-spacing">20</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
